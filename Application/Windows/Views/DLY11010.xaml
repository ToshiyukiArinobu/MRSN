                                         Text1Width="100"
                                         Text1="{Binding 請求先コード,Mode=TwoWay,NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}"
                                         Text2="{Binding 請求先名,Mode=TwoWay,NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}"
                                         />
