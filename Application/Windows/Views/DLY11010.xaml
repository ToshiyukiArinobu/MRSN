                <Grid Name="HyoujiGrid" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
