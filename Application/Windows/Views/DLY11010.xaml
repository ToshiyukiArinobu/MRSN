        <RibbonGroup.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Transparent" Offset="0.3"/>
                <GradientStop Color="Orange" Offset="0.99"/>
                <GradientStop Color="Transparent" Offset="1"/>
            </LinearGradientBrush>
        </RibbonGroup.Background>
