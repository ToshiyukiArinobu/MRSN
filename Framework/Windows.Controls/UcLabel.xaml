<UserControl x:Class="KyoeiSystem.Framework.Windows.Controls.UcLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fw="clr-namespace:KyoeiSystem.Framework.Windows.Controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Validation.ErrorTemplate="{StaticResource validationTemplate}"
             x:Name="Root"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Border x:Name="cBorder" BorderThickness="0.5" Grid.Column="0" Grid.Row="0" CornerRadius="5" Background="#3b5998" Margin="0">
    <Label x:Name="cLabel" Height="auto" Width="auto"  Content="{Binding ElementName=Root, Path=LabelText}" HorizontalContentAlignment="Center" FontFamily="Tahoma" VerticalContentAlignment="Center" Foreground="White" Margin="0"/>
	</Border>
</UserControl>
