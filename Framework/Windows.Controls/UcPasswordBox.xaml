<fw:FrameworkControl x:Class="KyoeiSystem.Framework.Windows.Controls.UcPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			       xmlns:fw="clr-namespace:KyoeiSystem.Framework.Windows.Controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Validation.ErrorTemplate="{StaticResource validationTemplate}"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100" >
  <Grid>
    <PasswordBox Name="cPasswordBox" PasswordChar="*" Background="Transparent"
                 PreviewKeyDown="cPasswordBox_KeyDown" GotFocus="cPasswordBox_GotFocus" PasswordChanged="PasswordBox_PasswordChanged"
                 LostFocus="cPasswordBox_LostFocus"/>
  </Grid>
</fw:FrameworkControl>
